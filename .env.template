API_KEY=
UPSTREAM_URL=https://generativelanguage.googleapis.com
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SECRET_KEY=your-secret-key-here-change-this-to-random-string
ASYNC_MODE=false

# Context Management Settings
# Configure how conversation history is managed and filtered
SELECTIVE_CONTEXT_ENABLED=false
CONTEXT_MIN_RELEVANCE_SCORE=0.3
CONTEXT_ALWAYS_KEEP_RECENT=15

# Security Settings
# Comma-separated list of allowed root directories for builtin code tools
# Leave empty to allow all paths. Example: /home/user/projects,/opt/workspace
ALLOWED_CODE_PATHS=

# Maximum allowed size for code/file content injected into the model's context (in KB)
# Default is 256 KB. Set to 0 to disable size restriction.
MAX_CODE_INJECTION_SIZE_KB=256

# CACHEING
MIN_CONTEXT_CACHING_TOKENS=2048

# DEBUG
VERBOSE_LOGGING=true
DEBUG_CLIENT_LOGGING=false

# AGENT AUX MODEL
AGENT_AUX_MODEL_ENABLED=true
AGENT_AUX_MODEL_NAME='gemini-flash-latest'